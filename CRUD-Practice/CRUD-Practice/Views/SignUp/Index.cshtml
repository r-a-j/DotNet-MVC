@model CRUD_Practice.Models.CustomerViewModel



@{
	ViewBag.Title = "Sign Up";
}

<link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">

<style type="text/css">
	A:link {
		COLOR: black;
		TEXT-DECORATION: none;
		font-weight: normal
	}

	A:visited {
		COLOR: black;
		TEXT-DECORATION: none;
		font-weight: normal
	}

	A:active {
		COLOR: black;
		TEXT-DECORATION: none
	}

	A:hover {
		COLOR: red;
		TEXT-DECORATION: none;
		
	}
</style>

<link rel="stylesheet" href="~/Style/css/style3.css">
</br>

<section class="signup">
	<div class="container">
		<div class="signup-content">
			<div class="signup-form">
				<a href="@Url.Action("Index", "SignUp")" class="h-100 form-title" style="color:black; font-weight:bolder; font-family:'Comic Sans MS'; text-shadow: 2px 8px 6px rgba(0,0,0,0.2),
						0px -5px 35px rgba(255,255,255,0.3);"><h1>Sign Up</h1></a>
				</br>
				</br>
				@using (Html.BeginForm("Index", "SignUp", FormMethod.Post, new { @class = "register-form" }))
				{

				<div class="form-group">
					@Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-group", placeholder = "Name" } }) @*@Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })*@

				</div>
				<div class="form-group">
					@Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "form-group", placeholder = "E-mail" } }) @*@Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })*@
				</div>
				<div class="form-group">
					@Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-group", placeholder = "Address" } }) @*@Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })*@

				</div>
				<div class="form-group">
					@Html.TextBoxFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-group" }, placeholder = "Phone" }) @*@Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })*@

				</div>
				<div class="form-group">
					@Html.PasswordFor(model => model.CustomerPassword, new { htmlAttributes = new { @class = "form-group" }, placeholder = "Password" }) @*@Html.ValidationMessageFor(model => model.CustomerPassword, "", new { @class = "text-danger" })*@

				</div>
				<div class="form-group">
					@Html.PasswordFor(model => model.CustomerRePassword, new { htmlAttributes = new { @class = "form-group" }, placeholder = "Confirm Password" }) @*@Html.ValidationMessageFor(model => model.CustomerRePassword, "", new { @class = "text-danger" })*@

				</div>

					<a href="@Url.Action("Index", "Profile")" style="font-weight:bolder; font-family:'Comic Sans MS'; font-size:10px;" class="signup-image-link">By Signing up you agree terms</a>

					<div class="form-group form-button">
						<input style="color:black; font-size:15px; font-weight:bolder; font-family:'Comic Sans MS';" type="submit" name="signup" id="signup" class="form-submit" value="Sign Up" />
					</div>
				}

			</div>
			<div class="signup-image">
				<figure><img src="~/Assets/images/signup-image.jpg" alt="sing up image"></figure>
				<a href="@Url.Action("Index", "Profile")" style="font-weight:bolder; font-family:'Comic Sans MS'; font-size:15px;" class="signup-image-link">I am already member</a>
			</div>
		</div>
		</div>
	</section>

	<script src="~/vendor/jquery/jquery.min.js"></script>
	<script src="~/Scripts/js/main3.js"></script>